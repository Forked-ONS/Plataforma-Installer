FROM node:carbon

WORKDIR /usr/src
ENV POSTGRES_HOST postgres
RUN git clone https://github.com/ONSBR/Plataforma-ApiCore.git
RUN git clone https://github.com/ONSBR/Plataforma-Domain.git
RUN cd /usr/src/Plataforma-Domain/Platform.Cli && npm install && npm link
WORKDIR /usr/src/Plataforma-ApiCore/Plataforma.ApiCore
ENTRYPOINT [ "plataforma", "--run" ]
